{% schema %}
  {
    "name": "Homepage History",
    "settings": [
      {
        "type": "text",
        "id": "subheading",
        "label": "Subtítulo",
        "default": "TENNIS"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Título",
        "default": "Raquetas.Accesorios. Pelotas."
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Descripción",
        "default": "Conoce nuestras raquetas y aprende a jugar Tennis como un profesional."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Texto del botón",
        "default": "HISTORIA"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Enlace del botón"
      }
    ],
    "presets": [
      {
        "name": "Homepage History"
      }
    ]
  }
{% endschema %}

<section class="homepage-history">
  <div class="container">
    <h2 class="heading">{{ section.settings.heading }}
      <span class="subheading">{{ section.settings.subheading }}</span>
    </h2>
    <div class="description-container">
      <p class="description">{{ section.settings.description }}</p>
      <a href="{{ section.settings.button_link }}" class="button">
        <span>
          {{ section.settings.button_text }}
        </span>
      </a>
    </div>
  </div>
</section>

